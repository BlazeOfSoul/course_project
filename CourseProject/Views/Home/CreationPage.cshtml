@model CourseProject.ViewModels.PostModel
@{
    ViewData["Title"] = "Create Post | ";
}

<div class="text-center">
    <h1 class="display-5 font-weight-bold">Create Post</h1>
</div>
<form asp-action="CreatePost" asp-controller="Home" asp-anti-forgery="true">
    <label class="font-weight-bold">Post Name</label>
    <div class="form-group">
        <input type="text" asp-for="PostName" />
    </div>
    <label class="font-weight-bold">Description</label>
    <div class="form-group">
        <textarea asp-for="PostContent" placeholder="Write description of task..." style="overflow: auto; resize: none; width: 100%; height: 150px; background: #f6f6f6; border: 1px solid #cecece; border-radius: 8px 0 0 0; padding: 8px 0 8px 10px;"></textarea>
    </div>

    <div class="d-flex justify-content-lg-start">
        <button type="submit" class="btn btn-success">Create!</button>
    </div>
</form>