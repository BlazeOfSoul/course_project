<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]MathSolver </title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/lib/dark-mode-switch-1.0.0/dark-mode.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a asp-controller="Home" asp-action="Index" class="navbar-brand font-weight-bold " style="color:goldenrod">MathSolver</a>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <div class="collapse navbar-collapse justify-content-end" id="navbarSupportedContent">
                            <script src="dark-mode-switch.min.js"></script>

                            @if (!User.Identity.IsAuthenticated)
                            {
                                <a asp-controller="Account" asp-action="Login" class="btn btn-primary mx-2">Sign In</a>
                                <a asp-controller="Account" asp-action="Register" class="btn btn-primary mx-2">Sign Up</a>
                            }
                            else
                            {
                                <a asp-controller="Account" asp-action="MyProfile" class="btn btn-primary mx-2">My Profile</a>
                                <form method="post" asp-controller="Account" asp-action="Logout">
                                    <button class="btn btn-danger mx-2" type="submit">Logout</button>
                                </form>
                            }
                            <div class="custom-control custom-switch">
                                <input type="checkbox" class="custom-control-input" id="darkSwitch" />
                                <label class="custom-control-label mx-2" for="darkSwitch">Dark Mode</label>
                            </div>
                            <script src="~/lib/dark-mode-switch-1.0.0/dark-mode-switch.min.js"></script>
                        </div>

                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 CourseProject made by Kolb Rostislav<a asp-controller="Home"></a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
