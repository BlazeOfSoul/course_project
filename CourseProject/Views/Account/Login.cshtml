@model CourseProject.ViewModels.LoginModel
@{
    ViewData["Title"] = "Sign In | ";
}

<div class="text-center">
    <h2>Login to the site</h2>
    <form asp-action="Login" asp-controller="Account" asp-anti-forgery="true">

        <div class="validation" asp-validation-summary="ModelOnly"></div>
        <div>
            <div class="form-group">
                <label asp-for="Email">Enter Email</label><br />
                <input type="text" asp-for="Email" />
                <span asp-validation-for="Email" />
            </div>
            <div class="form-group">
                <label asp-for="Password">Enter password</label><br />
                <input asp-for="Password" />
                <span asp-validation-for="Password" />
            </div>
            <div class="d-flex justify-content-center my-1">
                <input type="submit" value="Sign in" class="btn btn-primary mx-1" />
                <div class="g-signin2 btn btn-primary p-0 mx-1" data-onsuccess="onSignIn"></div>
            </div>
            <div class="fb-login-button" data-width="" data-size="medium" data-button-type="login_with" data-layout="default" data-auto-logout-link="false" data-use-continue-as="false"></div>
    </form>
    <script src="https://apis.google.com/js/platform.js" async defer></script>
    <meta name="google-signin-client_id" content="564471521262-f5e4ldh7kuf85di1538vdqu6hhqvq1ts.apps.googleusercontent.com">
    <div id="fb-root"></div>
    <script async defer crossorigin="anonymous" src="https://connect.facebook.net/en_GB/sdk.js#xfbml=1&version=v12.0&appId=324634236088545&autoLogAppEvents=1" nonce="MnEguP1r"></script>
</div>
<style>
    .abcRioButtonLightBlue {
        background-color: transparent;
        color: inherit;
    }
</style>
